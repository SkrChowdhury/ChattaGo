<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".User_OrderFragment"
    android:background="#fece2f"
    android:id="@+id/user_order_fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/wendy_one"
            android:padding="10dp"
            android:layout_gravity="center"
            android:text="My Order List"
            android:textAllCaps="true"
            android:textColor="#000"
            android:textSize="30sp" />

        <ImageView
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/user_order_illustration"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/round_corner_for_user_my_order_list"
            android:orientation="vertical">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:background="@drawable/round_corner_for_navigation_drawer"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_weight=".5"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="80dp"
                    android:src="@drawable/user_order_list_icon2"/>

                <LinearLayout
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/bungee"
                        android:text="Bank deposit"
                        android:textStyle="bold"
                        android:padding="10dp"
                        android:textSize="12sp"/>

                    <Button
                        android:id="@+id/trackOrder_Button1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Track Order"
                        android:fontFamily="@font/muli_black"
                        android:textSize="12sp"
                        android:padding="10dp"
                        style="@style/Widget.AppCompat.Button.Colored"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:background="@drawable/round_corner_for_navigation_drawer"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_weight=".5"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="80dp"
                    android:src="@drawable/user_order_list_icon2"/>

                <LinearLayout
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/bungee"
                        android:text="Medicine Delivery"
                        android:textStyle="bold"
                        android:padding="10dp"
                        android:textSize="12sp"/>

                    <Button
                        android:id="@+id/trackOrder_Button2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Track Order"
                        android:fontFamily="@font/muli_black"
                        android:textSize="12sp"
                        android:padding="10dp"
                        style="@style/Widget.AppCompat.Button.Colored"/>

                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:background="@drawable/round_corner_for_navigation_drawer"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_weight=".5"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/user_order_list_icon2"/>

                <LinearLayout
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/bungee"
                        android:text="Grocery delivery"
                        android:textStyle="bold"
                        android:padding="10dp"
                        android:textSize="12sp"/>

                    <Button
                        android:id="@+id/trackOrder_Button3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Track Order"
                        android:fontFamily="@font/muli_black"
                        android:textSize="12sp"
                        android:padding="10dp"
                        style="@style/Widget.AppCompat.Button.Colored"/>

                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:background="@drawable/round_corner_for_navigation_drawer"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_weight=".5"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/user_order_list_icon2"/>

                <LinearLayout
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/bungee"
                        android:text="Laundry Pickup &amp; Delivery"
                        android:textStyle="bold"
                        android:padding="10dp"
                        android:textSize="12sp"/>

                    <Button
                        android:id="@+id/trackOrder_Button4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Track Order"
                        android:fontFamily="@font/muli_black"
                        android:textSize="12sp"
                        android:padding="10dp"
                        style="@style/Widget.AppCompat.Button.Colored"/>

                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:background="@drawable/round_corner_for_navigation_drawer"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_weight=".5"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/user_order_list_icon2"/>

                <LinearLayout
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/bungee"
                        android:text="Gift Handling"
                        android:textStyle="bold"
                        android:padding="10dp"
                        android:textSize="12sp"/>

                    <Button
                        android:id="@+id/trackOrder_Button5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Track Order"
                        android:fontFamily="@font/muli_black"
                        android:textSize="12sp"
                        android:padding="10dp"
                        style="@style/Widget.AppCompat.Button.Colored"/>

                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:background="@drawable/round_corner_for_navigation_drawer"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="70dp"

                >

                <ImageView
                    android:layout_weight=".5"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/user_order_list_icon2"/>

                <LinearLayout
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/bungee"
                        android:text="Food delivery"
                        android:textStyle="bold"
                        android:padding="10dp"
                        android:textSize="12sp"/>

                    <Button
                        android:id="@+id/trackOrder_Button6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Track Order"
                        android:fontFamily="@font/muli_black"
                        android:textSize="12sp"
                        android:padding="10dp"
                        style="@style/Widget.AppCompat.Button.Colored"/>

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>









    </LinearLayout>

</ScrollView>