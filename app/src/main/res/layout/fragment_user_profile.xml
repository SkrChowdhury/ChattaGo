<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".User_ProfileFragment"
    android:background="#F1F5FB"
    android:id="@+id/user_profile_fragment"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:padding="20dp"
        android:background="#fece2f">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/chattago_logo"
            android:layout_centerHorizontal="true"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userProfileImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/user_profile_image"
            android:layout_centerVertical="true"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>

        <TextView
            android:id="@+id/userProfile_FullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sakkhor Chowdhury"
            android:textSize="18sp"
            android:fontFamily="@font/bungee"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/userProfileImage"
            android:includeFontPadding="false"
            android:textColor="#000"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+8801674340116"
            android:includeFontPadding="false"
            android:textSize="14sp"
            android:fontFamily="@font/bungee"
            android:layout_toEndOf="@+id/userProfileImage"
            android:layout_below="@+id/userProfile_FullName"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"

        android:layout_marginTop="-100dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/contactUs_cardview"
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#fece2f"
            app:cardBackgroundColor="#fece2f"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/track_order_icon" />

                <TextView
                    android:id="@+id/Track_Order_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/bungee"
                    android:text="Contact Us anytime"
                    android:textAlignment="center"

                    android:textSize="20sp" />

            </RelativeLayout>


        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/edit_profile_cardview"
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:background="#fece2f"
            app:cardBackgroundColor="#fece2f"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/edit_profile_icon" />

                <TextView
                    android:id="@+id/Edit_Profile_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/bungee"
                    android:text="Edit Your Profile"
                    android:textAlignment="center"
                    android:textSize="20sp" />

            </RelativeLayout>


        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     android:padding="10dp">
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:padding="10dp"
         android:orientation="horizontal">

         <TextView
             android:layout_weight=".5"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:text="Full Name"
             android:textSize="16sp"
             android:textColor="#000"
             android:fontFamily="@font/baloo"
             />

         <TextView
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1.5"
             android:text="Sakkhor Chowdhury"
             android:textSize="16sp"
             android:textColor="#000"
             android:layout_marginLeft="5dp"
             android:fontFamily="@font/antic" />
     </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:padding="10dp"
         android:orientation="horizontal">

         <TextView
             android:layout_weight=".5"
             android:layout_width="00dp"
             android:layout_height="wrap_content"
             android:text="Phone No"
             android:textSize="16sp"
             android:textColor="#000"
             android:fontFamily="@font/baloo"/>

         <TextView
             android:layout_weight="1.5"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:text="+8801674340116"
             android:layout_marginLeft="5dp"
             android:textSize="16sp"
             android:textColor="#000"
             android:fontFamily="@font/antic" />
     </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:padding="10dp"
         android:orientation="horizontal">

         <TextView
             android:layout_weight=".5"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:text="Email"
             android:textSize="16sp"
             android:textColor="#000"
             android:fontFamily="@font/baloo"/>

         <TextView
             android:layout_weight="1.5"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:text="Sakkhor.Chowdhury@gmail.com"
             android:textSize="16sp"
             android:layout_marginLeft="5dp"
             android:textColor="#000"
             android:fontFamily="@font/antic"/>
     </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:padding="10dp"
         android:orientation="horizontal">

         <TextView
             android:layout_weight=".5"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:text="Location"
             android:textSize="16sp"
             android:textColor="#000"
             android:fontFamily="@font/baloo"/>

         <TextView
             android:layout_weight="1.5"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:text="Chawkbazar, Chittagong"
             android:textSize="16sp"
             android:textColor="#000"
             android:layout_marginLeft="5dp"
             android:fontFamily="@font/antic" />
     </LinearLayout>
 </LinearLayout>






</LinearLayout>